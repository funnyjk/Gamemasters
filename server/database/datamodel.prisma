type User {
  id: ID! @id
  email: String! @unique
  password: String!
  resetPassword: ResetPassword @relation(onDelete: CASCADE)
  players: [Player!]! @relation(onDelete: CASCADE)
  games: [Game!]! @relation(onDelete: CASCADE)
  tournaments: [Tournament!]! @relation(onDelete: CASCADE)
}

type Player {
    id: ID! @id
    owner: User @relation(onDelete: SET_NULL)
    name: String!
    pic: String
    nickname: String
    tournaments: [TournamentPlayer!]! @relation(name: "PlayerToTournament", onDelete: CASCADE)
}

type Score {
    id: ID! @id
    player: TournamentPlayer! @relation(onDelete: SET_NULL)
    session: Session! @relation(onDelete: SET_NULL)
    score: Int
    notes: String
}

type Session {
    id: ID! @id
    createdAt: DateTime! @createdAt
    tournamentGame: TournamentGame! @relation(onDelete: SET_NULL)
    name: String!
    scores: [Score] @relation(onDelete: CASCADE)
}

type TournamentPlayer {
    id: ID! @id
    player: Player! @relation(name: "PlayerToTournament", onDelete: SET_NULL)
    tournament: Tournament! @relation(name: "TournamentToPlayer",  onDelete: SET_NULL)
    role: String
    nickname: String
    scores: [Score] @relation(onDelete: CASCADE)
}

type Tournament {
    id: ID! @id
    owner: User @relation(onDelete: SET_NULL)
    createdAt: DateTime! @createdAt
    name: String!
    startDate: DateTime
    endDate: DateTime
    rules: String
    notes: String
    games: [TournamentGame!] @relation(name: "TournamentToGame", onDelete: CASCADE)
    players: [TournamentPlayer!] @relation(name: "TournamentToPlayer", onDelete: CASCADE)
}

type Game {
    id: ID! @id
    owner: User @relation(onDelete: SET_NULL)
    tournaments: [TournamentGame!] @relation(name: "GameToTournament", onDelete: CASCADE)
    name: String!
    bgg_id: String
    notes: String
}

type TournamentGame {
    id: ID! @id
    game: Game! @relation(name: "GameToTournament", onDelete: SET_NULL)
    tournament: Tournament! @relation(name: "TournamentToGame",  onDelete: SET_NULL)
    sessions: [Session] @relation(onDelete: CASCADE)
}

type ResetPassword {
    id: ID! @id
    user: User! @relation(link: INLINE, onDelete: SET_NULL)
    token: String! @unique
    exp: DateTime!
}